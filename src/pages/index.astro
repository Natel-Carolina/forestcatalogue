---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Forest Catalog. ❤️">
	<main>
		<h1>Welcome to Forest Catalog</h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="/datasets"
				title="Datasets"
				body="Datasets related to forests."
			/>
			<Card
				href="/models"
				title="Models"
				body="Models related to forests."
			/>
			<Card
				href="/other-resources"
				title="Other Resources"
				body="Other Resources related to forests."
			/>
			<Card
				href="/tools"
				title="Tools"
				body="Tools related to forests."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
