---
interface Props {
  path: string;
  label: string;
}

const { path, label } = Astro.props;
const isActive =
  Astro.url.pathname === `${import.meta.env.BASE_URL}${path}` ||
  Astro.url.pathname === `${import.meta.env.BASE_URL}${path}/` ||
  (Astro.url.pathname === import.meta.env.BASE_URL && path === "/");
---

<li>
  <a
    href={`.${path}`}
    class:list={[
      "block py-2 px-3 rounded hover:bg-sushi-600 focus:bg-sushi-600 hover:text-sushi-100 focus:text-sushi-100",
      { ["bg-sushi-800 text-sushi-100"]: isActive },
    ]}
    aria-current={isActive ? "page" : false}
  >
    {label}
  </a>
</li>
